# .bashrc for Void Linux (and others)
# See notes in ~/.bash_profile.
#
# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# source alias
test -s ~/.alias && . ~/.alias || true

# prompt
if [ "$(id -u)" -ne 0 ]; then
  PS1='[\u@\h \w]\$ '
else
  PS1='[\[\e[31m\]\u@\h \w\[\e[0m\]]'
fi
