#!/bin/sh
# wgtoggle activates or deactivates the wg0 connection
# - wireguard.desktop calls this
# - updates waybar status if running
# wg0 must be defined.

. ~/.local/bin/functions.sh

IF=wg0

case $ID in
Darwin)
  # Create an automator.app entry for wgtoggle to make it easy to launch from Spotlight
  if networksetup -showpppoestatus $IF | grep "^disconnected"; then
    networksetup -connectpppoeservice $IF
    echo "connecting"
  else
    networksetup -disconnectpppoeservice $IF
    echo "disconnecting"
  fi
  ;;
*)
  if nmcli connection show --active | grep -qF wg0; then
    nmcli connection down wg0 >/dev/null 2>&1
    MSG="interface down"
  else
    # knockknock.sh
    nmcli connection up wg0 >/dev/null 2>&1
    MSG="interface up"
  fi
  if [ -n "$DBUS_SESSION_BUS_ADDRESS" ]; then
    notify-send --transient --app-name=wgtoggle --urgency=normal "wireguard" "$IF $MSG"
    if pgrep waybar >/dev/null 2>&1; then
      ip add show | grep -qF wg0 && echo "󰦝" || echo "󱦛"
      pkill -SIGRTMIN+9 waybar
    fi
  fi
  ;;
esac
