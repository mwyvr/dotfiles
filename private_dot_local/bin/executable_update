#!/usr/bin/sh
# package update/upgrade & fw updates for various Linux distributions (Chimera
# Linux, Void Linux, openSUSE Tumbleweed and Aeon Desktop)
. /etc/os-release

do_fw() {
    # Not installed on servers
    if test -x $(which fwupdmgr); then
        fwupdmgr get-updates && fwupdmgr update
    else 
        echo "fwupdmgr not found"
    fi
}

case $ID in
chimera)
    doas apk update
    doas apk upgrade
    do_fw
    ;;
void)
    sudo xbps-install -Su
    do_fw
    ;;
opensuse-tumbleweed)
    sudo zypper dup
    do_fw
    ;;
aeon)
    sudo transactional-update dup
    # fw updates built in
    ;;
opensuse-microos)
    # only use this as a server os
    sudo transactional-update dup
    ;;
*)
    echo "Unknown Linux distribution, terminating."
    exit 1
    ;;
esac
