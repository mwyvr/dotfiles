#!/usr/bin/sh
# package update/upgrade & fw updates for various Linux distributions (Chimera
# Linux, Void Linux, openSUSE Tumbleweed and Aeon Desktop)
. /etc/os-release

do_fw() {
	# don't install it on servers
	if test -x fwupdmgr; then
		fwupdmgr get-updates && fwupdmgr update
	fi
}

case $ID in
chimera)
	doas apk update
	doas apk upgrade
	do_fw
	;;
void)
	sudo xbps-install -Su
	do_fw
	;;
opensuse-tumbleweed)
	sudo zypper dup
	do_fw
	;;
aeon)
	sudo transactional-update dup
	# fw updates built in
	;;
opensuse-microos)
	sudo transactional-update dup
	# no do_fw - only have used this as a server os
	;;
*)
	echo "Unknown Linux distribution, terminating."
	exit 1
	;;
esac
