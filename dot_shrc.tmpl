. $HOME/.alias
export EDITOR=hx # migrated to Helix from Neovim

{{- if eq .chezmoi.os "darwin" }}
{{/* no op */}}
{{ else if eq .chezmoi.os "linux" }}
set -o vi

# prompt; supported by Chimera's sh; also bash
if [ "$(id -u)" -ne 0 ]; then
	PS1='[\[\e[32m\]\u@\h \W\[\e[0m\]]\$ '
else
	PS1='[\[\e[31m\]\u@\h \w\[\e[0m\]]# ' #root
fi

 echo $SHELL | grep -q bash
 if [ $? -eq 0]; then # set window titles
    case ${TERM} in
    st* | alacritty | foot | xterm* | rxvt* | kitty | kterm | gnome*)
        PROMPT_COMMAND=${PROMPT_COMMAND:+$PROMPT_COMMAND; }'printf "\033]0;%s:%s\007"   "${PWD/#$HOME/\~}"'
        export COLORTERM=truecolor
        ;;
    tmux* | screen*)
        PROMPT_COMMAND=${PROMPT_COMMAND:+$PROMPT_COMMAND; }'printf "\033]0;%s:%s\007"   "tmux: ${PWD/#$HOME/\~}"'
        ;;
    esac
fi
{{- end }}
