# freebsd/chimera linux almquist sh, and bash: set prompt
if [ "$(id -u)" -ne 0 ]; then
	PS1='[\[\e[32m\]\u@\h \W\[\e[0m\]]\$ '
else
	PS1='[\[\e[31m\]\u@\h \w\[\e[0m\]]# ' #root
