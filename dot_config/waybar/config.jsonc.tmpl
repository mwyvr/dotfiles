{
  "layer": "top",
  "position": "top",
  "height": 30, // remove for auto height
  "modules-left": [
    "river/tags"
  ],
  "modules-center": [
    "river/window"
  ],
  "modules-right": [
    "custom/checkupdates",
    "network",
    "custom/wg",
    "battery",
    "wireplumber",
    "custom/notification",
    "clock"
  ],
  "battery": {
    "states": {
      "good": 80,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}",
    "format-charging": "󰂄",
    "format-plugged": "",
    "tooltip-format": "󰁹 {capacity}% {time} {power:0.1f}W",
    "format-icons": [
      "󰂎",
      "󰁺",
      "󰁻",
      "󰁼",
      "󰁽",
      "󰁾",
      "󰁿",
      "󰂀",
      "󰂁",
      "󰂂",
      "󰁹"
    ]
  },
{{- if eq .chezmoi.osRelease.id "chimera" "freebsd" }}
  "clock": {
    "format": "{:%a %d %b %H:%M}",
    "interval": 1
  },
{{- else }}
    "clock": {
    "format": "{:%a %d %b %H:%M}",
    "tooltip-format": "<span color='#35b9ab'><tt><small>{calendar}</small></tt></span>",
    "calendar": {
      "mode-mon-col": 4,
      "weeks-pos": "left",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#35b9ab'><b>{}</b></span>",
        "weeks": "<span color='#73ba25'><b>{}</b></span>",
        "weekdays": "<span color='#21a4df'><b>{}</b></span>",
        "today": "<span color='#21a4df'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    },
    "interval": 1
  },
{{- end }}
  "custom/checkupdates": {
    "format": "{}",
    "interval": 3600,
    "exec-if": "which checkupdates",
    "exec": "checkupdates",
    "tooltip-format": "󰔽 updates available"
  },
  "custom/notification": {
    "tooltip": true,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='red'><small><sup>⬤</sup></small></span>",
      "none": "󰂚 ",
      "dnd-notification": "<span foreground='red'><small><sup>⬤</sup></small></span>",
      "dnd-none": "󰂛"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "custom/wg": {
    "signal": 9,
    "format": "{}",
    "exec": "ip add show | grep -qF wg0 && echo 󰦝 || echo 󱦛",
    "on-click": "wgtoggle",
    "tooltip-format": "󰦝 toggle wireguard vpn"
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "󰖩",
    "format-ethernet": "󰛳",
    "format-linked": "󰲛",
    "format-disconnected": "⚠",
    "tooltip-format": "󰖩 {ifname} {essid} ({signalStrength}%)"
  },
  "wireplumber": {
    "format": "{icon}",
    "format-alt": "{volume} {icon}",
    "format-alt-click": "click-right",
    "format-muted": "",
    "format-icons": {
      "headphones": "",
      "handsfree": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "",
        "",
        ""
      ]
    },
    "scroll-step": 10,
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    // "on-click-right": "pavucontrol",
    "tooltip": false
  }
}
